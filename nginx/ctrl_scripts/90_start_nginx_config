### This script takes $SiteDefs::ENSEMBL_NGINX_ROOT/conf/nginx.conf.tmpl and creates nginx.conf from it, replacing placeholders.

use strict;
use warnings;

use EnsEMBL::Web::Utils::FileHandler qw(file_get_contents file_put_contents);
use EnsEMBL::Web::Utils::FileSystem qw(create_path);

print "Writing NGINX config... \n";

my $root    = $SiteDefs::ENSEMBL_NGINX_ROOT;
my $rundir  = $SiteDefs::ENSEMBL_NGINX_RUNDIR;
my $exe     = $SiteDefs::ENSEMBL_NGINX_EXE;

die "Could not find NGINX root, ENSEMBL_NGINX_ROOT is not defined"    unless defined $root;
die "NGINX root '$root' does not exists"                              unless -d $root;

die "Could not find NGINX root, ENSEMBL_NGINX_RUNDIR is not defined"  unless defined $rundir;
create_path($rundir)                                                  unless -d $rundir;

die "Could not find NGINX exe, ENSEMBL_NGINX_EXE is not defined"      unless defined $exe;
die "NGINX exe '$exe' is not executable by the current user"          unless -x $exe;

my $template  = "$root/conf/nginx.conf.tmpl";
my $config    = "$rundir/nginx.conf";
my @lines     = file_get_contents($template, sub { s/\[\[(.*?)\]\]/eval $1;/ger });

unshift @lines, "# This is an autogenerated file, please use nginx.conf.tmpl or SiteDefs.pm to modify it.\n";

file_put_contents($config, @lines);

print sprintf "NGINX config file '%s' generated with %s lines\n", $config, scalar @lines;

1;
